{% extends 'base.html.twig' %}
{% block header %}
    <header xmlns="http://www.w3.org/1999/html">
        <div class="d-flex flex-column ">
            <h1 class="title-events"> Create event</h1>
        </div>
    </header>
{% endblock %}
{% block body %}
    <section class="container">
        <form class="form-group" action="/event/add" method="get">
            <div class="field form-group">
                <label>Picture:</label>
                <input class="form-control" type="text" name="path">
            </div>
            <div class="field">
                <label>Title:</label>
                <input class="form-control" type="text" name="title">
            </div>
            <div class="field">
                <label>Content:</label>
                <textarea class="form-control" name="content" ></textarea>
            </div>
            <div class="field">
                <label>Short content:</label>
                <textarea class="form-control" name="short_content" ></textarea>
            </div>
            <div class="field">
                <label>Data:</label>
                <input class="form-control" type="text" name="data_event">
            </div>
            <div class="field">
                <label>Likes:</label>
                <input class="form-control" type="text" name="likes">
            </div>
            <div class="form-group">
                <button class="btn  btn-primary button" type="submit">Send</button>
            </div>

        </form>
    </section>
{% endblock %}