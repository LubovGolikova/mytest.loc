            <button class="tablinks" onclick="openNav(event, 'Performer')">Performer</button>
            <button class="tablinks" onclick="openNav(event, 'Status')">Status</button>
            <button class="tablinks" onclick="openNav(event, 'Statistics')">Statistics</button>
        </div>

        <div id="Users" class="tabcontent">
            <div class = "title-chat">
                <h3>Users</h3>
            </div>
        <div class="tab-wrap">
            <table class = "table" id="myTable">
                <thead>
                <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>On the site</th>
                    <th>Status</th>
                    <th>Performer</th>
                    <th>Chat</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>1.</td>
                    <td>user</td>
                    <td>on the site</td>
                    <td>new</td>
                    <td>admin</td>
                    <td>
                        <a href="#open-block" class="link-open-block">Chat</a>
