        </div>
        </div>

        <div id="Performer" class="tabcontent">
            <h3>Performer</h3>
        </div>

        <div id="Status" class="tabcontent">
            <h3>Status</h3>
        </div>

        <div id="Statistic" class="tabcontent">
            <h3>Statistic</h3>
        </div>

    </div>
<div id="open-block" class="wrap">
    <div class="open-block-inner">
        <div class="open-block-text">
            <div class="container">
                <div class="col">
                    <h3>Message:</h3>
                    <!-- Вывод всех сообщений будет здесь -->
                    <div id="all_mess_adm"></div>
                </div>
                <div class="col">
                    <form id="messFormAdm">
                        <div class="form-group">
                            <input id="inp_adm" type="text" class="form-control input-lg" placeholder="Message..." />
                        </div>
                        <div class="form-group">
                            <button id="btn_adm" class="btn btn-lg btn-success" type="submit" >Send!</button>
                        </div>
                    </form>
                </div>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
                <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
                <script>
                    $(function() {
                        let socket = io("http://localhost:3035");

                        let $form_adm = $("#messFormAdm");
                        let $inp_adm = $("#inp_adm");
                        let $all_messages_adm = $("#all_mess_adm");
                        let $user_name_adm = "{{ app.user.username}}";

                        $form_adm.submit(function(event){
                            event.preventDefault();
                            socket.emit('send mess',{mess:$inp_adm.val(), user:$user_name_adm});
                            $inp_adm.val('');
                        });


                        socket.on('add mess', function (msg) {
                            console.log($user_name_adm);
                            console.log(msg.user+"chat-admin!");
                            $all_messages_adm.append( msg.user + ":" + msg.mess + "<br>");

                        });
                        socket.emit('add mess', 'Hello World from client!!!!');
                        socket.emit('new user',$user_name_adm);
                    });
                </script>
            </div>
            <a href="#" class="open-block-close" title="close">x</a>
        </div>
    </div>
</div>

{% endblock %}