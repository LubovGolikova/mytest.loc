{% extends 'base.html.twig' %}
{% block header %}
    <header>
        <div class="d-flex flex-column ">
            <h1 class="title-events"> All user </h1>
        </div>
    </header>
{% endblock %}
{% block body %}
    {% for user in users %}
        {% if 'ROLE_ADMIN' in user.roles %}
        <div class="container-events container">
            <h2>{{  user.username}}</h2>
            <h2>{{  user.password}}</h2>
            <h2>{{  user.email}}</h2>
            <p>---------------</p>
        </div>
        {% endif %}
        {% else %}
            <div class="container-events container">
                <h2>{{  user.username|upper}}</h2>
                <h2>{{  user.password|upper}}</h2>
                <h2>{{  user.email|upper}}</h2>
                <p>---------------</p>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}
