{% extends 'base.html.twig' %}
{% block header %}
    <header>
        <div class="d-flex flex-column ">
            <h1 class="title-events"> All events </h1>
        </div>
    </header>
{% endblock %}
{% block body %}
    {% for event in events %}
        <div class="container-events container">
            {% for label, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    {% if ( label == 'success' ) %}
                        <div class="alert alert-success alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ flash }}
                        </div>
                    {% elseif ( label == 'error' ) %}
                        <div class="alert alert-danger alert-dismissible fade show">
                            {{ flash }}
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
           <h2>{{  event.title }}</h2>
            <div class="row">
                <div class="picture-event">
                    <img src="{{ asset('assets/photo/' ~ event.path) }}" alt="" style="width: 100px"/>
                </div>
                <div class="content-event">
                    {{ event.shortContent }}
                    <a href="{{ path('event_id', {id: event.id}) }}"><p>Continue reading... </p></a>
                </div>
            </div>
                <p>---------------</p>
            <div class="row">
                <p>Posted: </p>
                <p>{{  event.dataEvent|date('Y-m-d') }}</p>
                <div class="likes-views">
                    <i class="fa fa-heart-o add-like" aria-hidden="true" data-id="{{ event.id }}"></i>
                    <span class="like-count">{{ event.likes }}</span>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}

                <div class="row">
                    <form action="{{ path('event_id_update',{id: event.id}) }}" method="POST">
                        <input type="hidden" name="_method" value="PUT" />
                        <button class="btn  btn-primary button" type="submit" value="Update" >Update</button>
                    </form>
                </div>
            {% endif %}
            <br>
        </div>

    {% endfor %}
{% endblock %}